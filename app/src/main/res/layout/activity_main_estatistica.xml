<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actitivitys.Main_Estatistica_Activity">

    <RelativeLayout
        android:id="@+id/backDocuments"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/estatisticafundo" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backDocuments">


        <ImageButton
            android:id="@+id/btn_grafico_um"
            android:layout_width="100dp"
            android:layout_height="104dp"
            android:background="@drawable/graficoum" />

        <ImageButton
            android:layout_marginTop="20dp"
            android:id="@+id/btn_grafico_dois"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btn_grafico_um"
            android:background="@drawable/graficodois" />

        <ImageButton
            android:id="@+id/btn_grafico_tres"
            android:layout_width="100dp"
            android:layout_height="102dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/btn_grafico_um"
            android:layout_toRightOf="@+id/btn_grafico_um"
            android:background="@drawable/graficotres" />

        <ImageButton
            android:id="@+id/btn_cash"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/btn_grafico_tres"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/btn_grafico_um"
            android:layout_toRightOf="@+id/btn_grafico_um"
            android:background="@drawable/cash"
            android:layout_marginStart="20dp" />


    </RelativeLayout>
</android.support.constraint.ConstraintLayout>