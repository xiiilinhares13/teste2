<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actitivitys.Main_Documentacao_Activity">


    <RelativeLayout
        android:id="@+id/backDocuments"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/fundo"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/backDocuments">


        <TextView
            android:id="@+id/codigo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Código:" />

        <TextView
            android:id="@+id/codigo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/codigo"
            android:layout_marginLeft="61dp"
            android:layout_marginStart="61dp"
            android:text="..." />

        <TextView
            android:id="@+id/titulo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/codigo"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:text="Título:" />


        <TextView
            android:id="@+id/titulo2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/codigo2"
            android:layout_alignStart="@+id/codigo2"
            android:layout_alignTop="@+id/titulo1"
            android:text="..." />

        <ImageButton
            android:id="@+id/swagger"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_below="@+id/titulo1"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/Transparent"
            android:src="@drawable/swagger" />

        <ImageButton
            android:id="@+id/wiki"
            android:layout_below="@+id/swagger"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/wiki"
            android:background="@color/Transparent"/>
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>