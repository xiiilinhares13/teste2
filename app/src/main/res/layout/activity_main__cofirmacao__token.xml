<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".actitivitys.Main_Cofirmacao_Token_Activity">


    <RelativeLayout
        android:id="@+id/backDocuments"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/seguranca" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/backDocuments">


        <TextView
            android:id="@+id/txt_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:text="Token gerado com sucesso!"
            android:textSize="25sp" />


        <ImageButton
            android:id="@+id/btn_documentacao"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_below="@+id/txt_codigo"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:background="@color/Transparent"
            android:src="@drawable/documentracao" />

        <ImageButton
            android:id="@+id/btn_primeiros_Passos"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_below="@+id/txt_PMS2"
            android:layout_marginTop="10dp"
            android:background="@color/Transparent"
            android:src="@drawable/passos" />

        <TextView

            android:id="@+id/txt_PMS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_documentacao"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:gravity="center_horizontal"
            android:text="Primeiro microsserviÃ§o?"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/txt_PMS2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_PMS"
            android:layout_marginTop="10dp"
            android:text="@string/txt"
            android:textAlignment="center"
            android:textSize="15sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>